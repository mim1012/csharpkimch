<Window x:Class="KimchiHedge.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:KimchiHedge.Client.Views"
        xmlns:vm="clr-namespace:KimchiHedge.Client.ViewModels"
        mc:Ignorable="d"
        Title="KimchiHedge - 김치프리미엄 헷지 자동매매"
        Height="700" Width="1000"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundDarkestBrush}">

    <Window.Resources>
        <!-- ViewModel to View DataTemplates -->
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ApiKeysViewModel}">
            <views:ApiKeysView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:HistoryViewModel}">
            <views:HistoryView/>
        </DataTemplate>
        <!-- 탭 버튼 스타일 -->
        <Style x:Key="NavButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontFamily" Value="{StaticResource FontDefault}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeMD}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                <Setter TargetName="border" Property="Background"
                                        Value="{StaticResource BackgroundLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background"
                                        Value="{StaticResource BackgroundMediumBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 왼쪽 사이드바 -->
        <Border Grid.Column="0"
                Background="{StaticResource BackgroundDarkBrush}"
                BorderBrush="{StaticResource BorderMutedBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 로고/타이틀 영역 -->
                <Border Grid.Row="0" Padding="16,20"
                        BorderBrush="{StaticResource BorderMutedBrush}"
                        BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="KimchiHedge"
                                   Style="{StaticResource TextBlockHeader}"
                                   Foreground="{StaticResource AccentBlueBrush}"/>
                        <TextBlock Text="김프 헷지 자동매매"
                                   Style="{StaticResource TextBlockMuted}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- 네비게이션 메뉴 -->
                <StackPanel Grid.Row="1" Margin="0,8">
                    <RadioButton Style="{StaticResource NavButton}"
                                 Content="대시보드"
                                 IsChecked="{Binding SelectedNav, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Dashboard}"
                                 GroupName="Navigation"
                                 Command="{Binding NavigateToDashboardCommand}"/>
                    <RadioButton Style="{StaticResource NavButton}"
                                 Content="설정"
                                 IsChecked="{Binding SelectedNav, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Settings}"
                                 GroupName="Navigation"
                                 Command="{Binding NavigateToSettingsCommand}"/>
                    <RadioButton Style="{StaticResource NavButton}"
                                 Content="API 키 관리"
                                 IsChecked="{Binding SelectedNav, Converter={StaticResource StringToBoolConverter}, ConverterParameter=ApiKeys}"
                                 GroupName="Navigation"
                                 Command="{Binding NavigateToApiKeysCommand}"/>
                    <RadioButton Style="{StaticResource NavButton}"
                                 Content="거래 내역"
                                 IsChecked="{Binding SelectedNav, Converter={StaticResource StringToBoolConverter}, ConverterParameter=History}"
                                 GroupName="Navigation"
                                 Command="{Binding NavigateToHistoryCommand}"/>
                </StackPanel>

                <!-- 하단 정보 -->
                <Border Grid.Row="2" Padding="16,12"
                        BorderBrush="{StaticResource BorderMutedBrush}"
                        BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TextBlockMuted}">
                            <Run Text="연결 상태: "/>
                            <Run Text="{Binding ConnectionStatus}" Foreground="{StaticResource StatusProfitBrush}"/>
                        </TextBlock>
                        <TextBlock Text="v1.0.0"
                                   Style="{StaticResource TextBlockMuted}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 메인 콘텐츠 영역 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 상단 헤더 바 -->
            <Border Grid.Row="0"
                    Background="{StaticResource BackgroundDarkBrush}"
                    BorderBrush="{StaticResource BorderMutedBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="24,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 현재 페이지 제목 -->
                    <TextBlock Grid.Column="0"
                               Text="{Binding PageTitle}"
                               Style="{StaticResource TextBlockSubHeader}"/>

                    <!-- 사용자 정보 -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding UserName}"
                                   Style="{StaticResource TextBlockBase}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <Button Content="로그아웃"
                                Style="{StaticResource ButtonBase}"
                                Padding="12,6"
                                FontSize="{StaticResource FontSizeSM}"
                                Command="{Binding LogoutCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 콘텐츠 영역 -->
            <Border Grid.Row="1" Padding="24">
                <ContentControl Content="{Binding CurrentViewModel}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
