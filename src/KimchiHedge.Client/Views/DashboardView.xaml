<UserControl x:Class="KimchiHedge.Client.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단: 시세 정보 + 김프 -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 업비트 시세 -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="업비트 BTC/KRW"
                               Style="{StaticResource TextBlockLabel}"/>
                    <TextBlock x:Name="UpbitPrice"
                               Text="145,230,000"
                               Style="{StaticResource TextBlockNumberLarge}"
                               Margin="0,8,0,0"/>
                    <TextBlock Style="{StaticResource TextBlockMuted}" Margin="0,4,0,0">
                        <Run Text="KRW"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- BingX 시세 -->
            <Border Grid.Column="1" Style="{StaticResource CardPanel}" Margin="8,0,8,0">
                <StackPanel>
                    <TextBlock Text="BingX BTCUSDT"
                               Style="{StaticResource TextBlockLabel}"/>
                    <TextBlock x:Name="BingXPrice"
                               Text="104,521.50"
                               Style="{StaticResource TextBlockNumberLarge}"
                               Margin="0,8,0,0"/>
                    <TextBlock Style="{StaticResource TextBlockMuted}" Margin="0,4,0,0">
                        <Run Text="USDT"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- 김치프리미엄 -->
            <Border Grid.Column="2" Style="{StaticResource CardPanel}" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="김치프리미엄"
                               Style="{StaticResource TextBlockLabel}"/>
                    <TextBlock x:Name="KimchiPremium"
                               Text="+3.25"
                               Style="{StaticResource TextBlockNumberLarge}"
                               Foreground="{StaticResource StatusProfitBrush}"
                               Margin="0,8,0,0"/>
                    <TextBlock Style="{StaticResource TextBlockMuted}" Margin="0,4,0,0">
                        <Run Text="%"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 중단: 자동매매 컨트롤 + 포지션 정보 -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- 자동매매 컨트롤 -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="자동매매"
                               Style="{StaticResource TextBlockSubHeader}"
                               Margin="0,0,0,16"/>

                    <!-- 상태 표시 -->
                    <Border x:Name="StatusBadge"
                            Background="{StaticResource BackgroundLighterBrush}"
                            CornerRadius="2"
                            Padding="12,8"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,16">
                        <TextBlock x:Name="StatusText"
                                   Text="대기 중"
                                   Style="{StaticResource TextBlockBase}"
                                   FontWeight="{StaticResource FontWeightMedium}"/>
                    </Border>

                    <!-- ON/OFF 토글 -->
                    <ToggleButton x:Name="AutoTradingToggle"
                                  Style="{StaticResource ToggleButtonTrading}"
                                  Content="자동매매 시작"
                                  HorizontalAlignment="Stretch"
                                  Checked="AutoTradingToggle_Checked"
                                  Unchecked="AutoTradingToggle_Unchecked"/>

                    <!-- 쿨다운 표시 -->
                    <StackPanel x:Name="CooldownPanel"
                                Visibility="Collapsed"
                                Margin="0,16,0,0">
                        <TextBlock Text="쿨다운 남은 시간"
                                   Style="{StaticResource TextBlockLabel}"/>
                        <TextBlock x:Name="CooldownTime"
                                   Text="04:32"
                                   Style="{StaticResource TextBlockNumber}"
                                   Foreground="{StaticResource StatusCooldownBrush}"
                                   FontSize="{StaticResource FontSizeXL}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 포지션 정보 -->
            <Border Grid.Column="1" Style="{StaticResource CardPanel}" Margin="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="포지션 정보"
                               Style="{StaticResource TextBlockSubHeader}"
                               Margin="0,0,0,16"/>

                    <!-- 포지션 없음 -->
                    <StackPanel x:Name="NoPositionPanel"
                                Grid.Row="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="현재 포지션 없음"
                                   Style="{StaticResource TextBlockMuted}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- 포지션 있음 -->
                    <Grid x:Name="PositionPanel"
                          Grid.Row="1"
                          Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 업비트 포지션 -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,16,12">
                            <TextBlock Text="업비트 현물 (롱)"
                                       Style="{StaticResource TextBlockLabel}"/>
                            <TextBlock x:Name="UpbitAmount"
                                       Text="0.01234567"
                                       Style="{StaticResource TextBlockNumber}"
                                       FontSize="{StaticResource FontSizeLG}"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="BTC"
                                       Style="{StaticResource TextBlockMuted}"/>
                        </StackPanel>

                        <!-- BingX 포지션 -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,0,12">
                            <TextBlock Text="BingX 선물 (숏)"
                                       Style="{StaticResource TextBlockLabel}"/>
                            <TextBlock x:Name="BingXAmount"
                                       Text="0.01234567"
                                       Style="{StaticResource TextBlockNumber}"
                                       FontSize="{StaticResource FontSizeLG}"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="BTC"
                                       Style="{StaticResource TextBlockMuted}"/>
                        </StackPanel>

                        <!-- 진입 김프 -->
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,16,12">
                            <TextBlock Text="진입 김프"
                                       Style="{StaticResource TextBlockLabel}"/>
                            <TextBlock x:Name="EntryKimchi"
                                       Text="+3.50%"
                                       Style="{StaticResource TextBlockNumber}"
                                       FontSize="{StaticResource FontSizeLG}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- 현재 김프 -->
                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,0,0,12">
                            <TextBlock Text="현재 김프"
                                       Style="{StaticResource TextBlockLabel}"/>
                            <TextBlock x:Name="CurrentKimchi"
                                       Text="+3.25%"
                                       Style="{StaticResource TextBlockNumber}"
                                       FontSize="{StaticResource FontSizeLG}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- 미실현 손익 -->
                        <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,16">
                            <TextBlock Text="미실현 손익"
                                       Style="{StaticResource TextBlockLabel}"/>
                            <TextBlock x:Name="UnrealizedPnL"
                                       Text="-25,430"
                                       Style="{StaticResource TextBlockNumberLarge}"
                                       Foreground="{StaticResource StatusLossBrush}"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="KRW"
                                       Style="{StaticResource TextBlockMuted}"/>
                        </StackPanel>

                        <!-- 수동 청산 버튼 -->
                        <Button x:Name="ManualCloseButton"
                                Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"
                                Content="수동 청산"
                                Style="{StaticResource ButtonDanger}"
                                Click="ManualCloseButton_Click"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- 하단: 로그 -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="실시간 로그"
                               Style="{StaticResource TextBlockSubHeader}"/>
                    <Button Content="지우기"
                            Style="{StaticResource ButtonBase}"
                            Padding="8,4"
                            FontSize="{StaticResource FontSizeSM}"
                            HorizontalAlignment="Right"
                            Click="ClearLogButton_Click"/>
                </Grid>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Background="{StaticResource BackgroundDarkestBrush}"
                              Padding="12">
                    <TextBlock x:Name="LogTextBlock"
                               Style="{StaticResource TextBlockBase}"
                               FontFamily="{StaticResource FontMono}"
                               FontSize="{StaticResource FontSizeSM}"
                               TextWrapping="Wrap"
                               Foreground="{StaticResource TextSecondaryBrush}">
                        <Run Text="[12:34:56] 시스템 시작" Foreground="{StaticResource TextMutedBrush}"/><LineBreak/>
                        <Run Text="[12:34:57] 김프 서버 연결됨" Foreground="{StaticResource StatusProfitBrush}"/><LineBreak/>
                        <Run Text="[12:34:58] 업비트 API 연결됨" Foreground="{StaticResource StatusProfitBrush}"/><LineBreak/>
                        <Run Text="[12:34:59] BingX API 연결됨" Foreground="{StaticResource StatusProfitBrush}"/><LineBreak/>
                        <Run Text="[12:35:00] 자동매매 대기 중..." Foreground="{StaticResource TextSecondaryBrush}"/>
                    </TextBlock>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
