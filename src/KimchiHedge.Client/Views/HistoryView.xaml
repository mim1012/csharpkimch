<UserControl x:Class="KimchiHedge.Client.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 요약 통계 -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 총 거래 횟수 -->
            <Border Grid.Column="0" Style="{StaticResource CardPanel}" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="총 거래"
                               Style="{StaticResource TextBlockLabel}"/>
                    <TextBlock Text="{Binding TotalTrades}"
                               Style="{StaticResource TextBlockNumberLarge}"
                               Margin="0,4,0,0"/>
                    <TextBlock Text="회"
                               Style="{StaticResource TextBlockMuted}"/>
                </StackPanel>
            </Border>

            <!-- 승률 -->
            <Border Grid.Column="1" Style="{StaticResource CardPanel}" Margin="8,0,8,0">
                <StackPanel>
                    <TextBlock Text="승률"
                               Style="{StaticResource TextBlockLabel}"/>
                    <TextBlock Text="{Binding WinRate}"
                               Style="{StaticResource TextBlockNumberLarge}"
                               Foreground="{StaticResource StatusProfitBrush}"
                               Margin="0,4,0,0"/>
                    <TextBlock Text="%"
                               Style="{StaticResource TextBlockMuted}"/>
                </StackPanel>
            </Border>

            <!-- 총 수익 -->
            <Border Grid.Column="2" Style="{StaticResource CardPanel}" Margin="8,0,8,0">
                <StackPanel>
                    <TextBlock Text="총 수익"
                               Style="{StaticResource TextBlockLabel}"/>
                    <TextBlock Text="{Binding TotalProfit}"
                               Style="{StaticResource TextBlockNumberLarge}"
                               Foreground="{StaticResource StatusProfitBrush}"
                               Margin="0,4,0,0"/>
                    <TextBlock Text="KRW"
                               Style="{StaticResource TextBlockMuted}"/>
                </StackPanel>
            </Border>

            <!-- 평균 수익 -->
            <Border Grid.Column="3" Style="{StaticResource CardPanel}" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="평균 수익"
                               Style="{StaticResource TextBlockLabel}"/>
                    <TextBlock Text="{Binding AvgProfit}"
                               Style="{StaticResource TextBlockNumberLarge}"
                               Foreground="{StaticResource StatusProfitBrush}"
                               Margin="0,4,0,0"/>
                    <TextBlock Text="KRW"
                               Style="{StaticResource TextBlockMuted}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 필터 -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Margin="0,0,0,16" Padding="12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="기간:"
                           Style="{StaticResource TextBlockBase}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <ComboBox Background="{StaticResource BackgroundLightBrush}"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          BorderBrush="{StaticResource BorderDefaultBrush}"
                          Padding="8,4"
                          MinWidth="100"
                          SelectedIndex="{Binding SelectedPeriodIndex}">
                    <ComboBoxItem Content="전체"/>
                    <ComboBoxItem Content="오늘"/>
                    <ComboBoxItem Content="최근 7일"/>
                    <ComboBoxItem Content="최근 30일"/>
                </ComboBox>

                <TextBlock Text="결과:"
                           Style="{StaticResource TextBlockBase}"
                           VerticalAlignment="Center"
                           Margin="24,0,8,0"/>
                <ComboBox Background="{StaticResource BackgroundLightBrush}"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          BorderBrush="{StaticResource BorderDefaultBrush}"
                          Padding="8,4"
                          MinWidth="100"
                          SelectedIndex="{Binding SelectedResultIndex}">
                    <ComboBoxItem Content="전체"/>
                    <ComboBoxItem Content="익절"/>
                    <ComboBoxItem Content="손절"/>
                    <ComboBoxItem Content="매수"/>
                    <ComboBoxItem Content="매도"/>
                </ComboBox>

                <TextBlock Text="{Binding StatusMessage}"
                           Style="{StaticResource TextBlockMuted}"
                           VerticalAlignment="Center"
                           Margin="24,0,0,0"/>

                <Button Content="새로고침"
                        Style="{StaticResource ButtonBase}"
                        Padding="12,4"
                        Margin="24,0,0,0"
                        Command="{Binding LoadHistoryCommand}"/>
            </StackPanel>
        </Border>

        <!-- 거래 내역 리스트 -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Padding="0">
            <DataGrid ItemsSource="{Binding Trades}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="Transparent"
                      Foreground="{StaticResource TextPrimaryBrush}"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="{StaticResource BorderMutedBrush}"
                      RowBackground="{StaticResource BackgroundMediumBrush}"
                      AlternatingRowBackground="{StaticResource BackgroundLightBrush}"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      FontFamily="{StaticResource FontMono}"
                      FontSize="{StaticResource FontSizeSM}">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource BackgroundDarkBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderDefaultBrush}"/>
                        <Setter Property="FontFamily" Value="{StaticResource FontDefault}"/>
                        <Setter Property="FontWeight" Value="Medium"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlueMutedBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="일시" Binding="{Binding DateTime}" Width="130"/>
                    <DataGridTextColumn Header="거래소" Binding="{Binding Exchange}" Width="70"/>
                    <DataGridTextColumn Header="심볼" Binding="{Binding Symbol}" Width="90"/>
                    <DataGridTextColumn Header="방향" Binding="{Binding Side}" Width="50"/>
                    <DataGridTextColumn Header="수량" Binding="{Binding Amount}" Width="90"/>
                    <DataGridTextColumn Header="가격" Binding="{Binding Price}" Width="100"/>
                    <DataGridTextColumn Header="금액" Binding="{Binding Total}" Width="100"/>
                    <DataGridTextColumn Header="결과" Binding="{Binding Result}" Width="60"/>
                    <DataGridTextColumn Header="손익" Binding="{Binding PnL}" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
