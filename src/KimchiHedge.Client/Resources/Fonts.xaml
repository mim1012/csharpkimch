<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- 폰트 설정                                       -->
    <!-- 숫자: 고정폭 폰트 (Consolas/Cascadia Mono)      -->
    <!-- 일반: Segoe UI                                 -->
    <!-- ============================================== -->

    <!-- 기본 폰트 -->
    <FontFamily x:Key="FontDefault">Segoe UI, Malgun Gothic</FontFamily>

    <!-- 숫자/코드용 고정폭 폰트 -->
    <FontFamily x:Key="FontMono">Cascadia Mono, Consolas, Courier New</FontFamily>

    <!-- 폰트 크기 -->
    <sys:Double x:Key="FontSizeXS" xmlns:sys="clr-namespace:System;assembly=mscorlib">10</sys:Double>
    <sys:Double x:Key="FontSizeSM" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
    <sys:Double x:Key="FontSizeMD" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
    <sys:Double x:Key="FontSizeLG" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
    <sys:Double x:Key="FontSizeXL" xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Double>
    <sys:Double x:Key="FontSize2XL" xmlns:sys="clr-namespace:System;assembly=mscorlib">24</sys:Double>
    <sys:Double x:Key="FontSize3XL" xmlns:sys="clr-namespace:System;assembly=mscorlib">32</sys:Double>

    <!-- 폰트 두께 -->
    <FontWeight x:Key="FontWeightLight">Light</FontWeight>
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

</ResourceDictionary>
