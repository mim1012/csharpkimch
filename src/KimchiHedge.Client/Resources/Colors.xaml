<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- 김치헷지 다크 테마 컬러 팔레트                   -->
    <!-- 증권사/은행 스타일 - 안정감 있는 다크 네이비     -->
    <!-- ============================================== -->

    <!-- 배경 색상 (Dark Navy 계열) -->
    <Color x:Key="BackgroundDarkest">#0D1117</Color>
    <Color x:Key="BackgroundDark">#161B22</Color>
    <Color x:Key="BackgroundMedium">#1C2128</Color>
    <Color x:Key="BackgroundLight">#21262D</Color>
    <Color x:Key="BackgroundLighter">#30363D</Color>

    <!-- 텍스트 색상 (Gray 계열) -->
    <Color x:Key="TextPrimary">#E6EDF3</Color>
    <Color x:Key="TextSecondary">#8B949E</Color>
    <Color x:Key="TextMuted">#6E7681</Color>
    <Color x:Key="TextDisabled">#484F58</Color>

    <!-- 포인트 색상 (Blue 계열) -->
    <Color x:Key="AccentBlue">#58A6FF</Color>
    <Color x:Key="AccentBlueDark">#1F6FEB</Color>
    <Color x:Key="AccentBlueLight">#79C0FF</Color>
    <Color x:Key="AccentBlueMuted">#388BFD26</Color>

    <!-- 상태 색상 - 익절 (Green/Profit) -->
    <Color x:Key="StatusProfit">#3FB950</Color>
    <Color x:Key="StatusProfitLight">#56D364</Color>
    <Color x:Key="StatusProfitBg">#238636</Color>

    <!-- 상태 색상 - 손절 (Red/Loss) -->
    <Color x:Key="StatusLoss">#F85149</Color>
    <Color x:Key="StatusLossLight">#FF7B72</Color>
    <Color x:Key="StatusLossBg">#DA3633</Color>

    <!-- 상태 색상 - 쿨다운 (Yellow/Warning) -->
    <Color x:Key="StatusCooldown">#D29922</Color>
    <Color x:Key="StatusCooldownLight">#E3B341</Color>
    <Color x:Key="StatusCooldownBg">#9E6A03</Color>

    <!-- 상태 색상 - 에러 (Orange/Error) -->
    <Color x:Key="StatusError">#F0883E</Color>
    <Color x:Key="StatusErrorLight">#FFA657</Color>
    <Color x:Key="StatusErrorBg">#BD561D</Color>

    <!-- 테두리 색상 -->
    <Color x:Key="BorderDefault">#30363D</Color>
    <Color x:Key="BorderMuted">#21262D</Color>
    <Color x:Key="BorderFocus">#58A6FF</Color>

    <!-- ============================================== -->
    <!-- SolidColorBrush 정의                           -->
    <!-- ============================================== -->

    <!-- 배경 브러시 -->
    <SolidColorBrush x:Key="BackgroundDarkestBrush" Color="{StaticResource BackgroundDarkest}"/>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="BackgroundLighterBrush" Color="{StaticResource BackgroundLighter}"/>

    <!-- 텍스트 브러시 -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}"/>

    <!-- 포인트 브러시 -->
    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
    <SolidColorBrush x:Key="AccentBlueDarkBrush" Color="{StaticResource AccentBlueDark}"/>
    <SolidColorBrush x:Key="AccentBlueLightBrush" Color="{StaticResource AccentBlueLight}"/>
    <SolidColorBrush x:Key="AccentBlueMutedBrush" Color="{StaticResource AccentBlueMuted}"/>

    <!-- 상태 브러시 - 익절 -->
    <SolidColorBrush x:Key="StatusProfitBrush" Color="{StaticResource StatusProfit}"/>
    <SolidColorBrush x:Key="StatusProfitLightBrush" Color="{StaticResource StatusProfitLight}"/>
    <SolidColorBrush x:Key="StatusProfitBgBrush" Color="{StaticResource StatusProfitBg}"/>

    <!-- 상태 브러시 - 손절 -->
    <SolidColorBrush x:Key="StatusLossBrush" Color="{StaticResource StatusLoss}"/>
    <SolidColorBrush x:Key="StatusLossLightBrush" Color="{StaticResource StatusLossLight}"/>
    <SolidColorBrush x:Key="StatusLossBgBrush" Color="{StaticResource StatusLossBg}"/>

    <!-- 상태 브러시 - 쿨다운 -->
    <SolidColorBrush x:Key="StatusCooldownBrush" Color="{StaticResource StatusCooldown}"/>
    <SolidColorBrush x:Key="StatusCooldownLightBrush" Color="{StaticResource StatusCooldownLight}"/>
    <SolidColorBrush x:Key="StatusCooldownBgBrush" Color="{StaticResource StatusCooldownBg}"/>

    <!-- 상태 브러시 - 에러 -->
    <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource StatusError}"/>
    <SolidColorBrush x:Key="StatusErrorLightBrush" Color="{StaticResource StatusErrorLight}"/>
    <SolidColorBrush x:Key="StatusErrorBgBrush" Color="{StaticResource StatusErrorBg}"/>

    <!-- 테두리 브러시 -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="{StaticResource BorderDefault}"/>
    <SolidColorBrush x:Key="BorderMutedBrush" Color="{StaticResource BorderMuted}"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="{StaticResource BorderFocus}"/>

</ResourceDictionary>
